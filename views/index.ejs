<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>
<body class="
    container-fluid
    text-center
    d-flex
    justify-content-center
    align-items-center
    flex-column
    bg-secondary-subtle" 
    style="min-height: 100vh;">
    <h1>Cortar link</h1>
        <form action="/" method="post" class="col-xs-10 col-md-8 col-lg-6">
            <div class="row m-auto">
                <div class="input-group input-group-lg">
                    <input type="text" name="longUrl" id="longUrl" 
                    class='form-control size-lg <%= errors.msg ? 'is-invalid' : '' %>' placeholder="IngresÃ¡ la url"
                    aria-describedby="button-addon2">
                    <button type="submit" value="Cortar" class="btn btn-primary col-4" disabled id="button-addon2">Cortar</button>
                </div>
            </div>
        </form>
        <% if(errors.msg) {%>
            <div class="errors">
                <% errors.msg.forEach(error=> { %>
                    <p class="text-danger text-center">
                        <%= error %>
                    </p>
                    <% }); %>
            </div>
            <% } %>
            <div class="url">
                <% if(url.link) {%>
                    <a href="<%= url.link %>" target="_blank">
                        <%= url.link %>
                    </a>
                    <% } %>
            </div>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
                crossorigin="anonymous"></script>
            <script src="../js/index.js"></script>
</body>

</html>