<button type="submit" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">Crear un
nuevo usuario</button>
<div class="modal fade modal-dialog modal-dialog-centered" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
aria-hidden="true">
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalLabel">Crear un usuario nuevo</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <form action="/createUser" method="post" class="container">
                    <div class="form-floating mb-3">
                        <input type="email" name="registerEmail" class="form-control" id="floatingInput" placeholder="name@example.com">
                        <label for="floatingInput">Mail</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="password" name="registerPassword" class="form-control" id="floatingPassword" placeholder="Password">
                        <label for="floatingPassword">Contraseña</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="password" name="registerPasswordCheck" class="form-control" id="floatingPassword" placeholder="Password">
                        <label for="floatingPassword">Repetir contraseña</label>
                    </div>
                    <select class="form-select form-select-sm mb-3" aria-label="Small select example" name="registerCategory">
                        <option selected>Categoría</option>
                        <option value="1">Administrador</option>
                        <option value="2">Usuario</option>
                    </select>
                <div class="">
                    <button type="button" class="btn btn-secondary"
                        data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </form>
            <% if(errors.msg) {%>
                <div class="errors">
                    <% errors.msg.forEach(error=> { %>
                        <p class="text-danger text-center">
                            <%= error %>
                        </p>
                        <% }); %>
                </div>
                <% } %>
        </div>
    </div>
</div>
</div>